/* pages/login/logins.wxss */
.item{
  display: flex;
  justify-content: center
}
.login-container{
  justify-content: center;
  display: flex
}
.login-item{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 60px;
  width: 80%;
  border-bottom: 1px solid #cfc9c9
}
.login-item-input{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 95%;
  height: 90%
  
}   
.login-item-sex{
  height: auto;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.input-item{
  height: 100%;
  width:80% 
}         
.forget-container{
  height: 30px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 38px
}
.login-button{
  height:50px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 15rpx;
}
.login-button button{
  border-radius: 50px;
  border: 0px;
  color: #fff;
  background: #96d655
}
.reset-button{
  height:50px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 5rpx;
}
.reset-button button{
  border-radius: 50px;
  border: 0px;
  color:white;
  background: red;
}